package Main;

import java.util.Scanner;

import Aplicacoes.HeapfyBuilt;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Lendo o tamanho do array
        System.out.print("Digite o tamanho do array: ");
        int n = sc.nextInt();

        int[] arr = new int[n];

        // Lendo os elementos do array
        System.out.println("Digite os elementos do array:");
        for (int i = 0; i < n; i++) {
            arr[i] = sc.nextInt();
        }

        System.out.println("Array original:");
        HeapfyBuilt.imprimeArray(arr);

        // Construindo a heap
        HeapfyBuilt.buildHeap(arr);
        System.out.println("Array após construir a heap:");
        HeapfyBuilt.imprimeArray(arr);

        // Aplicando heapsort
        HeapfyBuilt.heapSort(arr);
        System.out.println("Array após Heapsort:");
        HeapfyBuilt.imprimeArray(arr);

        sc.close();
    }
}
